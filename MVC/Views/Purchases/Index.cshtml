@model IEnumerable<Models.PurchaseGetModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light">Purchases</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cosmetic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Cosmetic.Name)
            </td>
            <td style="vertical-align: middle">
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
        </tr>
}
    </tbody>
</table>
