@model UserLoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<h2 class="text-light">Login</h2>

<form method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group text-light">
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control  bg-dark text-light"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group text-light">
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control bg-dark text-light" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input bg-dark" asp-for="RememberMe">
        <label class="form-check-label text-light" asp-for="RememberMe">Remember me</label>
      </div>
    <div class="container flex-grow" style="width: 100%">
        <button class="m-1 btn btn-primary" style="align-self: flex-end" type="submit">Login</button>
    </div>
</form>