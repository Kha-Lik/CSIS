@model IEnumerable<Models.CosmeticGetModel>

@{
    ViewData["Title"] = "Suggestion";
}

<h1 class="text-light">Cosmetics to order</h1>

<table class="table table-dark table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShelfLife)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.DeliveryTime)
            </td>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.ShelfLife)
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a class="btn btn-outline-primary text-light" asp-action="Index">Back to List</a>
</div>